{
  "name": "tailwindcss-font-size",
  "author": "RyoSogawa",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "https://github.com/RyoSogawa/tailwindcss-font-size.git",
  "bugs": "https://github.com/RyoSogawa/tailwindcss-font-size/issues",
  "homepage": "https://github.com/RyoSogawa/tailwindcss-font-size",
  "keywords": [
    "tailwindcss",
    "plugin",
    "tailwindcss-plugin",
    "font-size"
  ],
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.(js|ts|jsx|tsx)\"",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "yarn lint --fix",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.18"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
